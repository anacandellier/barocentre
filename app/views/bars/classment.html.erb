      <div class="row justify-content-center">
        <div class="col-sm-3 col-lg-12 p-4">
          <div class="text-center border-bottom mt-2">
            <p class="border-bottom pb-2">L'événement <strong><%= @event.name %></strong> est organisé par : <strong><%= @event.user.username %></strong></p>
            <h1>LE CLASSEMENT <i class="fa-solid fa-ranking-star"></i></h1>
          </div>
            <div class="row justify-content-center p-3">
              <% @bars.each do |bar| %>
                <div class="col-sm-12 col-lg-12 card-product m-3" style="width: 600px ;border-radius: 5px; padding: 0">
                  <img src="<%= bar.photo %>"/>
                    <div class="card-product-infos d-flex justify-content-between">
                      <div>
                        <h2><%= bar.name %></h2>
                        <p><%= bar.address %></p>
                        <% if bar.votes.count <= 1 %>
                        <p><strong><%= bar.votes.count %> vote pour ce bar</strong></p>
                        <% else %>
                        <p><strong><%= bar.votes.count %> votes pour ce bar</strong></p>
                        <% end %>
                        <p><%= bar.rating %> <i class="fa-solid fa-star"></i></p>
                      </div>
                    </div>
                        <%= link_to "Choisir", event_choose_bar_path(@event, bar: bar), class: "btn btn-ghost btn-sm" %>
                </div>
              <% end %>
            </div>
        </div>
      </div>
