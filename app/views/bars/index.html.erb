<div class="row justify-content-center">
  <div class="col-sm-3 col-lg-12 p-4">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="100000">
          <div class="text-center border-bottom mt-2">
            <p class="border-bottom pb-2">L'événement <strong><%= @event.name %></strong> est organisé par : <strong><%= @event.user.username %></strong></p>
            <h1>LISTE DES BARS <i class="fa-solid fa-beer-mug-empty"></i></h1>
          </div>
            <div class="row justify-content-center">
            <% @bars.each do |bar| %>
              <div class="col-sm-12 col-lg-3 card-trip m-3" style="width: 400px; border-radius: 5px; padding: 0">
                <img src="<%= bar.photo %>"/>
                  <div class="card-trip-infos">
                    <div>
                      <h2><%= bar.name %></h2>
                      <p><%= bar.address %></p>
                      <p><%= bar.rating %> <i class="fa-solid fa-star"></i></p>
                    </div>
                    <%= link_to "vote", root_path, class: "btn btn-ghost btn-sm" %>
                  </div>
              </div>
            <% end %>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="100000">
          <div style="width: 100%; height: 600px; border-radius: 15px"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-sm-3 col-lg-12 d-flex justify-content-center">
  <button data-bs-target="#carouselExampleControls" data-bs-slide="previous" class="btn btn-dark me-2" style="border-radius: 20Px">
    BARS <i class="fa-solid fa-list"></i>
  </button>
  <button data-bs-target="#carouselExampleControls" data-bs-slide="next" class="btn btn-dark" style="border-radius: 20Px">
    CARTE <i class="fa-solid fa-map"></i>
  </button>
</div>
