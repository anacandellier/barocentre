
<div class="container " style="width: 500px">

  <div class="text-center border-bottom m-3">
    <h1>VOICI LES COPAINS</h1>
  </div>
  <div class="row justify-content-between">

      <% @eventusers.each do |element| %>
          <div class="col-6">
            <div class="d-flex align-items-center justify-content-center m-3">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "rounded-circle me-3", style: "width: 50px" %>
              <div>
                <p class="mt-3" style="font-size: 10px"><%= element.user.email %><br><%= element.user_address %></p>
              </div>
            </div>
          </div>
      <% end %>

    <div class="d-flex justify-content-end m-1">
      <%= link_to "Let's go", new_event_event_user_path(@event.event_users), class: "button2" %>
    </div>

    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>

</div>
