<div class="row justify-content-center">
  <div class="col-sm-3 col-lg-12 ps-5 pe-5 pt-3 pb-2">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="100000">
          <div class="text-center border-bottom mt-2">
            <p class="border-bottom pb-2">L'événement <strong><%= @event.name %></strong> est organisé par : <strong><%= @event.user.username %></strong></p>
            <h1>VOICI LES COPAINS <i class="fa-solid fa-user-group"></i> </h1>
          </div>
          <div class="row d-flex ms-1 me-1 justify-content-center">
              <% @eventusers.each do |element| %>
                  <div class="col-sm-3 col-lg-4 border-bottom mb-2">
                    <div class="d-flex flex-row justify-content-start align-items-center m-3">
                      <div>
                        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "rounded-circle me-3", style: "width: 100px" %>
                      </div>
                      <div>
                        <p class="mt-3" style="font-size: 13px"><strong><%= element.user.username %></strong><br><%= element.user_address %></p>
                        <p class="mt-3" style="font-size: 13px"><%= translate(element.transport) %></p>
                      </div>
                    </div>
                  </div>
              <% end %>
              <div class="d-flex justify-content-end mb-3">
                <%= link_to "Let's go", barocentre_path, class: "btn btn-ghost" %>
              </div>
          </div>
        </div>
        <div class="carousel-item" data-bs-interval="100000">
          <div style="width: 100%; height: 600px; border-radius: 15px"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-sm-3 col-lg-12 d-flex justify-content-center">
  <button data-bs-target="#carouselExampleControls" data-bs-slide="previous" class="btn btn-dark me-2" style="border-radius: 20Px">
    LISTE <i class="fa-solid fa-list"></i>
  </button>
  <button data-bs-target="#carouselExampleControls" data-bs-slide="next" class="btn btn-dark" style="border-radius: 20Px">
    CARTE <i class="fa-solid fa-map"></i>
  </button>
</div>
