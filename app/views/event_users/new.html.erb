<div class="container vh-100">
  <div class="mt-5">
    <h1>Je participe à cet événement</h1>
    <h2><%= @event.name %></h2>
    <p><%= @event.date %></p>

    <%= simple_form_for([@event, @event_user]) do |f| %>
    <%= f.input :user_address, label: "Je pars de...", input_html: {data: {address_autocomplete_target: "address"}}, wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}, placeholder: "68 avenue Parmentier"%>
    <%= f.association :mean_of_transport, label: "en", as: :radio_buttons %>
    <%= f.submit%>
    <% end %>
  </div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"> 
</div>

</div>
