<div style="width: 100%; height: 100vh; border-radius: 15px"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="col-sm-12 col-lg-3 card-product m-3" style="width: 300px; border-radius: 5px; padding: 0; position : fixed; bottom : 50px; right: 20px">
  <%= image_tag @bar.photo %>
  <div class="card-product-infos">
    <div>
      <h2><%= @bar.name %></h2>
      <p><%= @bar.address %></p>
      <p><%= @bar.rating %> <i class="fa-solid fa-star"></i></p>
    </div>
  </div>
</div>
